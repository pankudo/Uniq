<resources>

    <!--Theme framework - AppCompact v21-->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light"/>

    <style name="Theme" parent="FrameworkRoot.Theme">
        <!--Only need for pre-L-->
    <!--
        <item name="android:editTextBackground">@drawable/edit_text</item>
    -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Uniq.Base" parent="Theme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarInsetStart">@dimen/keyline</item>
        <item name="android:textColorLink">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/grey_400</item>
    </style>

    <style name="Theme.Uniq.Welcome" parent="Theme.Uniq.Base">
        <item name="actionBarInsetStart">@dimen/keyline_minus_16dp</item>
        <item name="spinnerBarInsetStart">@dimen/keyline_minus_16dp</item>
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>


    <style name="ActionBarThemeOverlay" parent="Theme">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">@color/grey_700</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textColorSecondary">@color/grey_700</item>

        <item name="android:textSize">18sp</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
